{
  "name": "super-chess-drills",
  "version": "0.0.23",
  "description": "chess preparation tool",
  "author": "theProgramLuke",
  "private": true,
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "yarn run build:main && yarn run build:preload && yarn run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:preload:types": "dts-cb -i \"packages/preload/tsconfig.json\" -o \"packages/preload/exposedInMainWorld.d.ts\"",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production yarn run build && electron-builder build --config .electron-builder.config.js --dir",
    "test": "yarn run test:unit && yarn run test:e2e",
    "test:unit": "yarn run test:main:coverage && yarn run test:preload:coverage && yarn run test:renderer:coverage",
    "test:e2e": "yarn run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "test:main:coverage": "c8 yarn test:main",
    "test:preload:coverage": "c8 yarn test:preload",
    "test:renderer:coverage": "c8 yarn test:renderer",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --max-warnings 0 --ext js,ts,pug,vue && prettier --check \"**/*.+(js|ts|pug|json|vue)\"",
    "format": "prettier --write \"**/*.+(js|ts|pug|json)\"",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "yarn run build:preload:types && vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn run typecheck:main && yarn run typecheck:preload && yarn run typecheck:renderer"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "1.19.2",
    "@quasar/vite-plugin": "1.0.5",
    "@testing-library/vue": "6.5.1",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "@vitejs/plugin-vue": "2.2.4",
    "@vue/test-utils": "2.0.0-rc.18",
    "c8": "7.11.0",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "17.1.0",
    "electron-builder": "22.14.13",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.10.0",
    "eslint-plugin-pug": "1.2.4",
    "eslint-plugin-vue": "8.5.0",
    "happy-dom": "2.41.0",
    "nano-staged": "0.6.0",
    "playwright": "1.19.2",
    "prettier": "2.5.1",
    "pug": "3.0.2",
    "sass": "1.49.9",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.6.2",
    "vite": "2.8.5",
    "vitest": "0.5.9",
    "vue-tsc": "0.32.0"
  },
  "dependencies": {
    "@quasar/extras": "1.12.5",
    "@sentry/electron": "3.0.3",
    "@sentry/vue": "6.18.1",
    "@types/chess.js": "0.11.2",
    "@types/lodash": "4.14.179",
    "chess.js": "0.12.1",
    "chessground": "8.2.0",
    "electron-updater": "4.6.5",
    "lodash": "4.17.21",
    "quasar": "2.5.5",
    "vue": "3.2.31",
    "vue-class-component": "8.0.0-rc.1",
    "vue-router": "4.0.13"
  }
}
